<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Books</h1>
<table>
 <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
  <tr><td><%= book.title %></td>
   <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book)%></td>
     <td><%= link_to"edit", edit_book_path(book)%></td>
      <td><%= link_to"Destroy", book_path(book),method: :delete, "data-confirm" => "Are you sure？" %></td></tr>
       <% end %>
  </tbody>
</table>
<h1>New book</h1>
<%= form_with model: @book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

<p><%= f.submit 'Create Book' %></p>
<% end %>
