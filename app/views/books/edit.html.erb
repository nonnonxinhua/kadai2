<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

    <label>Title</label>

  <div>
    <%= f.text_field :title %>
  </div>

  <label>Body</label>
  <div>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

　<%= link_to "Show", book_path(@book)%> |
　<%= link_to"Back", books_path%>