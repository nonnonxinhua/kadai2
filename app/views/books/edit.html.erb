<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

    <label>Title</label>

  <div>
    <%= f.text_field :title %>
  </div>

  <label>Body</label>
  <div>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

　<%= link_to "Show", book_path(@book)%> |
